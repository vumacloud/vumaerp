<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================= -->
    <!-- Override Login Page                          -->
    <!-- ============================================= -->
    <template id="login_layout" inherit_id="web.login_layout" name="VumaERP Login Layout">
        <!-- Replace Odoo logo with VumaERP logo -->
        <xpath expr="//img[contains(@src, 'odoo')]" position="replace">
            <img src="/vumaerp_branding/static/src/img/logo.png" alt="VumaERP"
                 style="max-height: 80px; margin-bottom: 20px;"/>
        </xpath>
    </template>

    <!-- ============================================= -->
    <!-- Override Login Page Title                    -->
    <!-- ============================================= -->
    <template id="web_login_title" inherit_id="web.login" name="VumaERP Login Title">
        <xpath expr="//title" position="replace">
            <title>VumaERP | Login</title>
        </xpath>
    </template>

    <!-- ============================================= -->
    <!-- Override Database Selector Title             -->
    <!-- ============================================= -->
    <template id="database_selector_title" inherit_id="web.database_selector" name="VumaERP DB Selector">
        <xpath expr="//title" position="replace">
            <title>VumaERP | Select Database</title>
        </xpath>
    </template>

    <!-- ============================================= -->
    <!-- Override Database Manager Title              -->
    <!-- ============================================= -->
    <template id="database_manager_title" inherit_id="web.database_manager" name="VumaERP DB Manager">
        <xpath expr="//title" position="replace">
            <title>VumaERP | Database Manager</title>
        </xpath>
        <xpath expr="//img[contains(@src, 'odoo')]" position="replace">
            <img src="/vumaerp_branding/static/src/img/logo.png" alt="VumaERP" height="60"/>
        </xpath>
    </template>

    <!-- ============================================= -->
    <!-- Footer Branding                              -->
    <!-- ============================================= -->
    <template id="login_footer" inherit_id="web.login" name="VumaERP Login Footer">
        <xpath expr="//div[hasclass('text-center', 'small')]" position="replace">
            <div class="text-center small mt-3">
                <a href="https://vumacloud.com" target="_blank" class="text-muted">
                    Powered by VumaERP
                </a>
            </div>
        </xpath>
    </template>
</odoo>
