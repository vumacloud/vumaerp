<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- EBM Config Form View -->
    <record id="view_ebm_config_form" model="ir.ui.view">
        <field name="name">l10n_rw.ebm.config.form</field>
        <field name="model">l10n_rw.ebm.config</field>
        <field name="arch" type="xml">
            <form string="EBM Configuration">
                <header>
                    <button name="action_test_connection"
                        type="object"
                        string="Test Connection"
                        class="btn-primary"/>
                    <field name="status" widget="statusbar"
                        statusbar_visible="inactive,active"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Configuration Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Device Information">
                            <field name="device_id"/>
                            <field name="serial_number"/>
                            <field name="device_type"/>
                        </group>
                        <group string="Connection">
                            <field name="environment"/>
                            <field name="api_endpoint"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <group string="Status">
                            <field name="last_sync"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- EBM Config Tree View -->
    <record id="view_ebm_config_tree" model="ir.ui.view">
        <field name="name">l10n_rw.ebm.config.tree</field>
        <field name="model">l10n_rw.ebm.config</field>
        <field name="arch" type="xml">
            <list string="EBM Configurations">
                <field name="name"/>
                <field name="device_id"/>
                <field name="environment"/>
                <field name="status"/>
                <field name="last_sync"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- EBM Config Action -->
    <record id="action_ebm_config" model="ir.actions.act_window">
        <field name="name">EBM Devices</field>
        <field name="res_model">l10n_rw.ebm.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure your EBM devices
            </p>
            <p>
                Register your Electronic Billing Machine devices here to enable
                automatic invoice submission to RRA.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_ebm_config"
        name="EBM Devices"
        parent="account.menu_finance_configuration"
        action="action_ebm_config"
        sequence="100"/>
</odoo>
