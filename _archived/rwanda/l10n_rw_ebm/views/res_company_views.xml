<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_ebm" model="ir.ui.view">
        <field name="name">res.company.form.ebm</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="EBM Configuration" name="ebm_config">
                    <group>
                        <group string="EBM Settings">
                            <field name="ebm_enabled"/>
                            <field name="ebm_environment" invisible="not ebm_enabled"/>
                        </group>
                        <group string="RRA Information">
                            <field name="rra_tin"/>
                            <field name="vsd_c"/>
                        </group>
                    </group>
                    <group invisible="not ebm_enabled">
                        <group string="Device Information">
                            <field name="ebm_device_id"/>
                            <field name="ebm_serial_number"/>
                        </group>
                        <group string="API Credentials">
                            <field name="ebm_api_url"/>
                            <field name="ebm_api_username"/>
                            <field name="ebm_api_password" password="True"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
