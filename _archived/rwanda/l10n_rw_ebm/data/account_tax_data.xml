<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Rwanda VAT Tax Group -->
        <record id="tax_group_vat_rw" model="account.tax.group">
            <field name="name">VAT</field>
            <field name="sequence">10</field>
            <field name="country_id" ref="base.rw"/>
        </record>

        <!-- Rwanda Standard VAT - 18% (Sales) -->
        <record id="tax_rw_vat_18_sale" model="account.tax">
            <field name="name">VAT 18% (Sales)</field>
            <field name="type_tax_use">sale</field>
            <field name="amount_type">percent</field>
            <field name="amount">18</field>
            <field name="tax_group_id" ref="tax_group_vat_rw"/>
            <field name="country_id" ref="base.rw"/>
            <field name="description">VAT 18%</field>
            <field name="sequence">1</field>
        </record>

        <!-- Rwanda Standard VAT - 18% (Purchases) -->
        <record id="tax_rw_vat_18_purchase" model="account.tax">
            <field name="name">VAT 18% (Purchases)</field>
            <field name="type_tax_use">purchase</field>
            <field name="amount_type">percent</field>
            <field name="amount">18</field>
            <field name="tax_group_id" ref="tax_group_vat_rw"/>
            <field name="country_id" ref="base.rw"/>
            <field name="description">VAT 18%</field>
            <field name="sequence">1</field>
        </record>

        <!-- Rwanda Zero-Rated VAT (Exports) - Sales -->
        <record id="tax_rw_vat_0_sale" model="account.tax">
            <field name="name">VAT 0% - Zero Rated (Sales)</field>
            <field name="type_tax_use">sale</field>
            <field name="amount_type">percent</field>
            <field name="amount">0</field>
            <field name="tax_group_id" ref="tax_group_vat_rw"/>
            <field name="country_id" ref="base.rw"/>
            <field name="description">VAT 0%</field>
            <field name="sequence">2</field>
        </record>

        <!-- Rwanda Exempt VAT - Sales -->
        <record id="tax_rw_vat_exempt_sale" model="account.tax">
            <field name="name">VAT Exempt (Sales)</field>
            <field name="type_tax_use">sale</field>
            <field name="amount_type">percent</field>
            <field name="amount">0</field>
            <field name="tax_group_id" ref="tax_group_vat_rw"/>
            <field name="country_id" ref="base.rw"/>
            <field name="description">Exempt</field>
            <field name="sequence">3</field>
        </record>
    </data>
</odoo>
