<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_payroll_structure_form" model="ir.ui.view">
        <field name="name">hr.payroll.structure.form</field>
        <field name="model">hr.payroll.structure</field>
        <field name="arch" type="xml">
            <form string="Salary Structure">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Structure Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="parent_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Salary Rules" name="salary_rules">
                            <field name="rule_ids">
                                <list>
                                    <field name="sequence"/>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="category_id"/>
                                    <field name="amount_select"/>
                                </list>
                            </field>
                        </page>
                        <page string="Description" name="note">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_payroll_structure_tree" model="ir.ui.view">
        <field name="name">hr.payroll.structure.tree</field>
        <field name="model">hr.payroll.structure</field>
        <field name="arch" type="xml">
            <list string="Salary Structure">
                <field name="name"/>
                <field name="code"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <record id="action_hr_payroll_structure" model="ir.actions.act_window">
        <field name="name">Structures</field>
        <field name="res_model">hr.payroll.structure</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
