<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- ============================================= -->
        <!-- Ghana PAYE Tax Bands (2025)                  -->
        <!-- Monthly amounts in GHS                       -->
        <!-- ============================================= -->

        <!-- Band 1: 0 - 490 = 0% -->
        <record id="paye_band_gh_1" model="ghana.paye.tax.band">
            <field name="name">First GHS 490</field>
            <field name="sequence">1</field>
            <field name="min_amount">0</field>
            <field name="max_amount">490</field>
            <field name="rate">0</field>
        </record>

        <!-- Band 2: 491 - 600 = 5% (next GHS 110) -->
        <record id="paye_band_gh_2" model="ghana.paye.tax.band">
            <field name="name">Next GHS 110 (5%)</field>
            <field name="sequence">2</field>
            <field name="min_amount">490</field>
            <field name="max_amount">600</field>
            <field name="rate">5</field>
        </record>

        <!-- Band 3: 601 - 730 = 10% (next GHS 130) -->
        <record id="paye_band_gh_3" model="ghana.paye.tax.band">
            <field name="name">Next GHS 130 (10%)</field>
            <field name="sequence">3</field>
            <field name="min_amount">600</field>
            <field name="max_amount">730</field>
            <field name="rate">10</field>
        </record>

        <!-- Band 4: 731 - 3,896 = 17.5% (next GHS 3,166) -->
        <record id="paye_band_gh_4" model="ghana.paye.tax.band">
            <field name="name">Next GHS 3,166 (17.5%)</field>
            <field name="sequence">4</field>
            <field name="min_amount">730</field>
            <field name="max_amount">3896</field>
            <field name="rate">17.5</field>
        </record>

        <!-- Band 5: 3,897 - 20,000 = 25% (next GHS 16,104) -->
        <record id="paye_band_gh_5" model="ghana.paye.tax.band">
            <field name="name">Next GHS 16,104 (25%)</field>
            <field name="sequence">5</field>
            <field name="min_amount">3896</field>
            <field name="max_amount">20000</field>
            <field name="rate">25</field>
        </record>

        <!-- Band 6: 20,001 - 50,000 = 30% (next GHS 30,000) -->
        <record id="paye_band_gh_6" model="ghana.paye.tax.band">
            <field name="name">Next GHS 30,000 (30%)</field>
            <field name="sequence">6</field>
            <field name="min_amount">20000</field>
            <field name="max_amount">50000</field>
            <field name="rate">30</field>
        </record>

        <!-- Band 7: Above 50,000 = 35% -->
        <record id="paye_band_gh_7" model="ghana.paye.tax.band">
            <field name="name">Above GHS 50,000 (35%)</field>
            <field name="sequence">7</field>
            <field name="min_amount">50000</field>
            <field name="max_amount">0</field>
            <field name="rate">35</field>
        </record>

        <!-- ============================================= -->
        <!-- Default Statutory Configuration              -->
        <!-- ============================================= -->

        <record id="statutory_config_gh_default" model="ghana.statutory.config">
            <field name="name">Ghana Default 2025</field>
            <field name="ssnit_employee_rate">5.5</field>
            <field name="ssnit_employer_rate">13.0</field>
            <field name="tier2_rate">5.0</field>
        </record>
    </data>
</odoo>
