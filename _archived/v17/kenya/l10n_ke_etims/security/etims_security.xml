<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- eTIMS User Groups -->
    <record id="group_etims_user" model="res.groups">
        <field name="name">eTIMS User</field>
        <field name="category_id" ref="base.module_category_accounting_accounting"/>
        <field name="comment">Access to view eTIMS information on documents</field>
    </record>

    <record id="group_etims_manager" model="res.groups">
        <field name="name">eTIMS Manager</field>
        <field name="category_id" ref="base.module_category_accounting_accounting"/>
        <field name="implied_ids" eval="[(4, ref('group_etims_user'))]"/>
        <field name="comment">Full access to eTIMS configuration and operations</field>
    </record>

    <!-- Record Rules -->
    <record id="etims_config_company_rule" model="ir.rule">
        <field name="name">eTIMS Config: Multi-company</field>
        <field name="model_id" ref="model_etims_config"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>

    <record id="etims_device_company_rule" model="ir.rule">
        <field name="name">eTIMS Device: Multi-company</field>
        <field name="model_id" ref="model_etims_device"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
