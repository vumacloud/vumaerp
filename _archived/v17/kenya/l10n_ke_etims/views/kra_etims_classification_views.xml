<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Classification Tree View -->
    <record id="kra_etims_classification_view_tree" model="ir.ui.view">
        <field name="name">kra.etims.classification.view.tree</field>
        <field name="model">kra.etims.classification</field>
        <field name="arch" type="xml">
            <tree string="Item Classifications">
                <field name="item_code"/>
                <field name="name"/>
                <field name="code"/>
                <field name="level"/>
                <field name="parent_code"/>
                <field name="use_yn"/>
            </tree>
        </field>
    </record>
    
    <!-- Classification Form View -->
    <record id="kra_etims_classification_view_form" model="ir.ui.view">
        <field name="name">kra.etims.classification.view.form</field>
        <field name="model">kra.etims.classification</field>
        <field name="arch" type="xml">
            <form string="Item Classification">
                <sheet>
                    <group>
                        <group>
                            <field name="item_code"/>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="level"/>
                            <field name="parent_code"/>
                            <field name="use_yn"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Classification Search View -->
    <record id="kra_etims_classification_view_search" model="ir.ui.view">
        <field name="name">kra.etims.classification.view.search</field>
        <field name="model">kra.etims.classification</field>
        <field name="arch" type="xml">
            <search string="Item Classifications">
                <field name="item_code"/>
                <field name="name"/>
                <field name="code"/>
                <filter string="Active" name="active" domain="[('use_yn','=',True)]"/>
                <filter string="Inactive" name="inactive" domain="[('use_yn','=',False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Code Class" name="code" context="{'group_by':'code'}"/>
                    <filter string="Level" name="level" context="{'group_by':'level'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Classification Action -->
    <record id="kra_etims_classification_action" model="ir.actions.act_window">
        <field name="name">Item Classifications</field>
        <field name="res_model">kra.etims.classification</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No item classifications found
            </p>
            <p>
                Sync item classifications from KRA e-TIMS using the device sync function.
            </p>
        </field>
    </record>
</odoo>
