<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paye_tax_band_view_form" model="ir.ui.view">
        <field name="name">kenya.paye.tax.band.form</field>
        <field name="model">kenya.paye.tax.band</field>
        <field name="arch" type="xml">
            <form string="PAYE Tax Band">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="rate"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="lower_limit"/>
                            <field name="upper_limit"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="paye_tax_band_view_tree" model="ir.ui.view">
        <field name="name">kenya.paye.tax.band.tree</field>
        <field name="model">kenya.paye.tax.band</field>
        <field name="arch" type="xml">
            <tree string="PAYE Tax Bands">
                <field name="name"/>
                <field name="lower_limit"/>
                <field name="upper_limit"/>
                <field name="rate"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="paye_tax_band_action" model="ir.actions.act_window">
        <field name="name">PAYE Tax Bands</field>
        <field name="res_model">kenya.paye.tax.band</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
