<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ghana_statutory_config_view_form" model="ir.ui.view">
        <field name="name">ghana.statutory.config.form</field>
        <field name="model">ghana.statutory.config</field>
        <field name="arch" type="xml">
            <form string="Ghana Statutory Configuration">
                <sheet>
                    <group>
                        <group string="Company">
                            <field name="company_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <group string="SSNIT Rates">
                            <field name="ssnit_employee_rate"/>
                            <field name="ssnit_employer_rate"/>
                        </group>
                        <group string="Tier 2 Pension">
                            <field name="tier2_rate"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ghana_statutory_config_view_tree" model="ir.ui.view">
        <field name="name">ghana.statutory.config.tree</field>
        <field name="model">ghana.statutory.config</field>
        <field name="arch" type="xml">
            <tree string="Ghana Statutory Configuration">
                <field name="company_id"/>
                <field name="ssnit_employee_rate"/>
                <field name="ssnit_employer_rate"/>
                <field name="tier2_rate"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="ghana_statutory_config_action" model="ir.actions.act_window">
        <field name="name">Statutory Configuration</field>
        <field name="res_model">ghana.statutory.config</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
