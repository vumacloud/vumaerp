<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Uganda PAYE Tax Bands (Monthly - Resident) 2025 -->
        <!-- First UGX 235,000 is tax-free -->
        <record id="paye_band_ug_1" model="uganda.paye.tax.band">
            <field name="min_income">0</field>
            <field name="max_income">235000</field>
            <field name="rate">0</field>
            <field name="resident_type">resident</field>
            <field name="band_type">monthly</field>
        </record>

        <!-- UGX 235,001 - 335,000 @ 10% -->
        <record id="paye_band_ug_2" model="uganda.paye.tax.band">
            <field name="min_income">235000</field>
            <field name="max_income">335000</field>
            <field name="rate">10</field>
            <field name="resident_type">resident</field>
            <field name="band_type">monthly</field>
        </record>

        <!-- UGX 335,001 - 410,000 @ 20% -->
        <record id="paye_band_ug_3" model="uganda.paye.tax.band">
            <field name="min_income">335000</field>
            <field name="max_income">410000</field>
            <field name="rate">20</field>
            <field name="resident_type">resident</field>
            <field name="band_type">monthly</field>
        </record>

        <!-- UGX 410,001 - 10,000,000 @ 30% -->
        <record id="paye_band_ug_4" model="uganda.paye.tax.band">
            <field name="min_income">410000</field>
            <field name="max_income">10000000</field>
            <field name="rate">30</field>
            <field name="resident_type">resident</field>
            <field name="band_type">monthly</field>
        </record>

        <!-- Above UGX 10,000,000 @ 40% (30% + 10% surcharge) -->
        <record id="paye_band_ug_5" model="uganda.paye.tax.band">
            <field name="min_income">10000000</field>
            <field name="max_income">999999999999</field>
            <field name="rate">40</field>
            <field name="resident_type">resident</field>
            <field name="band_type">monthly</field>
        </record>

        <!-- Non-Resident: Flat 30% -->
        <record id="paye_band_ug_nonres" model="uganda.paye.tax.band">
            <field name="min_income">0</field>
            <field name="max_income">999999999999</field>
            <field name="rate">30</field>
            <field name="resident_type">non_resident</field>
            <field name="band_type">monthly</field>
        </record>

        <!-- Local Service Tax Rates (Kampala) -->
        <record id="lst_rate_1" model="uganda.lst.rate">
            <field name="name">Below 100,000/month</field>
            <field name="local_government">Kampala</field>
            <field name="min_income">0</field>
            <field name="max_income">1200000</field>
            <field name="annual_tax">0</field>
        </record>

        <record id="lst_rate_2" model="uganda.lst.rate">
            <field name="name">100,001 - 200,000/month</field>
            <field name="local_government">Kampala</field>
            <field name="min_income">1200000</field>
            <field name="max_income">2400000</field>
            <field name="annual_tax">10000</field>
        </record>

        <record id="lst_rate_3" model="uganda.lst.rate">
            <field name="name">200,001 - 300,000/month</field>
            <field name="local_government">Kampala</field>
            <field name="min_income">2400000</field>
            <field name="max_income">3600000</field>
            <field name="annual_tax">20000</field>
        </record>

        <record id="lst_rate_4" model="uganda.lst.rate">
            <field name="name">300,001 - 400,000/month</field>
            <field name="local_government">Kampala</field>
            <field name="min_income">3600000</field>
            <field name="max_income">4800000</field>
            <field name="annual_tax">30000</field>
        </record>

        <record id="lst_rate_5" model="uganda.lst.rate">
            <field name="name">400,001 - 500,000/month</field>
            <field name="local_government">Kampala</field>
            <field name="min_income">4800000</field>
            <field name="max_income">6000000</field>
            <field name="annual_tax">40000</field>
        </record>

        <record id="lst_rate_6" model="uganda.lst.rate">
            <field name="name">Above 500,000/month</field>
            <field name="local_government">Kampala</field>
            <field name="min_income">6000000</field>
            <field name="max_income">0</field>
            <field name="annual_tax">100000</field>
        </record>

        <!-- Default Uganda Statutory Config -->
        <record id="uganda_statutory_config_default" model="uganda.statutory.config">
            <field name="name">Uganda Statutory Rates 2025</field>
            <field name="active">True</field>
            <field name="nssf_employee_rate">5</field>
            <field name="nssf_employer_rate">10</field>
            <field name="paye_threshold">235000</field>
            <field name="lst_local_government">Kampala</field>
        </record>
    </data>
</odoo>
