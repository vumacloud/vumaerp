<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- eTIMS Configuration Form View -->
    <record id="etims_config_view_form" model="ir.ui.view">
        <field name="name">etims.config.form</field>
        <field name="model">etims.config</field>
        <field name="arch" type="xml">
            <form string="eTIMS Configuration">
                <header>
                    <button name="action_test_connection" string="Test Connection" type="object" class="oe_highlight"/>
                    <button name="action_initialize_device" string="Initialize Device" type="object"/>
                    <button name="action_sync_codes" string="Sync Codes" type="object"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_devices" type="object" class="oe_stat_button" icon="fa-microchip">
                            <field name="device_count" widget="statinfo" string="Devices"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Active" bg_color="bg-success" invisible="not is_active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Configuration Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Connection Settings">
                            <field name="environment" widget="radio"/>
                            <field name="sandbox_url" invisible="environment != 'sandbox'"/>
                            <field name="production_url" invisible="environment != 'production'"/>
                            <field name="timeout"/>
                        </group>
                        <group string="Company Settings">
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="is_active"/>
                        </group>
                    </group>
                    <group>
                        <group string="KRA Credentials">
                            <field name="tin" placeholder="e.g., P000000000X"/>
                            <field name="branch_id"/>
                            <field name="device_serial"/>
                            <field name="comm_key" password="True"/>
                        </group>
                        <group string="Automation">
                            <field name="auto_submit_invoices"/>
                            <field name="auto_register_products"/>
                            <field name="auto_report_stock"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Configuration notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- eTIMS Configuration Tree View -->
    <record id="etims_config_view_tree" model="ir.ui.view">
        <field name="name">etims.config.tree</field>
        <field name="model">etims.config</field>
        <field name="arch" type="xml">
            <list string="eTIMS Configurations">
                <field name="name"/>
                <field name="environment" widget="badge" decoration-info="environment == 'sandbox'" decoration-success="environment == 'production'"/>
                <field name="tin"/>
                <field name="branch_id"/>
                <field name="is_active"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- eTIMS Configuration Action -->
    <record id="etims_config_action" model="ir.actions.act_window">
        <field name="name">eTIMS Configuration</field>
        <field name="res_model">etims.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure eTIMS Integration
            </p>
            <p>
                Set up your KRA eTIMS OSCU integration here. You'll need your TIN (PIN),
                Device Serial Number, and Communication Key from KRA.
            </p>
        </field>
    </record>
</odoo>
