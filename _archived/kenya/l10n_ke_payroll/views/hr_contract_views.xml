<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_contract_view_form_kenya" model="ir.ui.view">
        <field name="name">hr.contract.form.kenya</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='wage']" position="after">
                <separator string="Kenya Allowances"/>
                <group>
                    <group>
                        <field name="ke_house_allowance"/>
                        <field name="ke_transport_allowance"/>
                    </group>
                    <group>
                        <field name="ke_medical_allowance"/>
                        <field name="ke_other_allowances"/>
                    </group>
                </group>
                <separator string="Kenya Statutory"/>
                <group>
                    <group>
                        <field name="ke_kra_pin"/>
                        <field name="ke_nhif_number"/>
                        <field name="ke_nssf_number"/>
                    </group>
                    <group>
                        <field name="ke_pension_opt_out"/>
                        <field name="ke_private_pension"/>
                        <field name="ke_mortgage_interest"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
