<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Invoice Form View Extension for WHT -->
    <record id="view_account_move_form_nigeria" model="ir.ui.view">
        <field name="name">account.move.form.nigeria</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_info']" position="after">
                <page string="Nigeria Tax" name="nigeria_tax"
                      invisible="move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund']">
                    <group>
                        <group string="Withholding Tax">
                            <field name="ng_wht_applicable"/>
                            <field name="ng_wht_rate" invisible="not ng_wht_applicable"/>
                            <field name="ng_wht_amount" readonly="1"/>
                        </group>
                        <group string="VAT">
                            <field name="ng_vat_amount" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
