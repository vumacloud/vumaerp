        <record id="category_ng_tax" model="hr.salary.rule.category">
            <field name="name">Nigeria Tax</field>
            <field name="code">NG_TAX</field>
            <field name="parent_id" ref="om_hr_payroll.DED"/>
        </record>

        <record id="category_ng_deduction" model="hr.salary.rule.category">
            <field name="name">Nigeria Deductions</field>
            <field name="code">NG_DED</field>
            <field name="parent_id" ref="om_hr_payroll.DED"/>
        </record>

        <record id="category_ng_employer" model="hr.salary.rule.category">
            <field name="name">Nigeria Employer Contributions</field>
            <field name="code">NG_ERC</field>
        </record>
    </data>
