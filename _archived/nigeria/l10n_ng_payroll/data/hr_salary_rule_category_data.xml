        <record id="category_ng_allowance" model="hr.salary.rule.category">
            <field name="name">Nigeria Allowances</field>
            <field name="code">NG_ALW</field>
            <field name="parent_id" ref="om_hr_payroll.ALW"/>
        </record>

        <record id="category_ng_pension" model="hr.salary.rule.category">
            <field name="name">Nigeria Pension</field>
            <field name="code">NG_PENSION</field>
            <field name="parent_id" ref="om_hr_payroll.DED"/>
