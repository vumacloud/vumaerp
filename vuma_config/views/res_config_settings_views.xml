<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_vuma" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.vuma</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='general_settings']//block[@title='Discuss']" position="before">
                <block title="VumaCloud Environment" name="vuma_environment">
                    <setting string="Environment Configuration" help="Configuration loaded from environment variables">
                        <div class="content-group">
                            <div class="row mt-2">
                                <label for="env_file_loaded" class="col-3 o_light_label"/>
                                <field name="env_file_loaded" readonly="1"/>
                            </div>
                            <div class="row">
                                <label for="env_smtp_configured" class="col-3 o_light_label"/>
                                <field name="env_smtp_configured" readonly="1"/>
                            </div>
                            <div class="row">
                                <label for="env_db_configured" class="col-3 o_light_label"/>
                                <field name="env_db_configured" readonly="1"/>
                            </div>
                            <div class="row mt-2">
                                <label for="env_info" class="col-3 o_light_label"/>
                                <field name="env_info" readonly="1" class="text-muted"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
