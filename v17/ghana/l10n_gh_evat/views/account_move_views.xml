<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_evat" model="ir.ui.view">
        <field name="name">account.move.form.evat</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add E-VAT button in header -->
            <xpath expr="//button[@name='action_post']" position="after">
                <button name="action_submit_to_evat" string="Submit to E-VAT"
                        type="object" class="btn-primary"
                        attrs="{'invisible': ['|', ('evat_submitted', '=', True), ('state', '!=', 'posted')]}"/>
            </xpath>

            <!-- Add E-VAT page in notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="E-VAT" name="evat"
                      attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}">
                    <group>
                        <group string="E-VAT Status">
                            <field name="evat_submitted"/>
                            <field name="evat_status"/>
                            <field name="evat_submission_date"/>
                        </group>
                        <group string="E-VAT Reference">
                            <field name="evat_reference"/>
                        </group>
                    </group>
                    <group string="Error" attrs="{'invisible': [('evat_error_message', '=', False)]}">
                        <field name="evat_error_message" nolabel="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_move_tree_evat" model="ir.ui.view">
        <field name="name">account.move.tree.evat</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="evat_status" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
