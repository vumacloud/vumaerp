<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="evat_config_view_form" model="ir.ui.view">
        <field name="name">evat.config.form</field>
        <field name="model">evat.config</field>
        <field name="arch" type="xml">
            <form string="E-VAT Configuration">
                <sheet>
                    <group>
                        <group string="Company">
                            <field name="company_id"/>
                            <field name="active"/>
                            <field name="environment"/>
                        </group>
                        <group string="Status">
                            <field name="status"/>
                            <field name="last_sync"/>
                        </group>
                    </group>
                    <group>
                        <group string="Tax Information">
                            <field name="tin"/>
                            <field name="vat_number"/>
                        </group>
                        <group string="API Configuration">
                            <field name="api_url"/>
                            <field name="api_key" password="True"/>
                            <field name="api_secret" password="True"/>
                        </group>
                    </group>
                    <group>
                        <group string="Settings">
                            <field name="auto_submit"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="evat_config_view_tree" model="ir.ui.view">
        <field name="name">evat.config.tree</field>
        <field name="model">evat.config</field>
        <field name="arch" type="xml">
            <tree string="E-VAT Configuration">
                <field name="company_id"/>
                <field name="tin"/>
                <field name="environment"/>
                <field name="status"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="evat_config_action" model="ir.actions.act_window">
        <field name="name">E-VAT Configuration</field>
        <field name="res_model">evat.config</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
