<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Override Mail Layout to remove Odoo branding -->
    <template id="mail_notification_layout" inherit_id="mail.mail_notification_layout" name="VumaERP Mail Layout" priority="999">
        <!-- Add VumaERP branding class -->
        <xpath expr="//table[1]" position="attributes">
            <attribute name="class" add="vumaerp-email" separator=" "/>
        </xpath>
    </template>

    <!-- Override Email Signature Footer Template -->
    <template id="vumaerp_email_footer" name="VumaERP Email Footer">
        <div style="margin-top: 20px; padding-top: 10px; border-top: 1px solid #eeeeee; text-align: center; color: #888888; font-size: 11px;">
            <p style="margin: 0;">
                Powered by <a href="https://vumacloud.com" style="color: #714B67; text-decoration: none;">VumaERP</a>
            </p>
        </div>
    </template>

    <!-- Override mail notification with Odoo replacement -->
    <template id="mail_notification_light" inherit_id="mail.mail_notification_light" name="VumaERP Light Notification" priority="999">
        <!-- This will be handled by JavaScript and CSS replacements -->
    </template>
</odoo>
