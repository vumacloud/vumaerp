<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Override Login Page Title -->
    <template id="login_layout" inherit_id="web.login_layout" name="VumaERP Login Layout" priority="999">
        <xpath expr="//head/title" position="replace">
            <title>VumaERP - Login</title>
        </xpath>
    </template>

    <!-- Override Login Page Content -->
    <template id="login" inherit_id="web.login" name="VumaERP Login Page" priority="999">
        <!-- Replace footer -->
        <xpath expr="//footer" position="replace">
            <footer class="text-center text-muted small o_footer o_login_footer pt-3 pb-4">
                <div class="o_footer_content">
                    Powered by <a href="https://vumacloud.com" target="_blank" class="text-muted">VumaCloud</a>
                </div>
            </footer>
        </xpath>
    </template>
</odoo>
