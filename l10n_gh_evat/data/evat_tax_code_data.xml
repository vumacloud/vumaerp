<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
        GRA E-VAT Tax Codes
        Reference: GRA E-VAT API Documentation
        Updated for VAT Act 1151 (effective January 2026)
        -->

        <!-- TAX CODES -->
        <record id="tax_code_a" model="ghana.evat.tax.code">
            <field name="name">Exempted Supplies</field>
            <field name="code">TAX_A</field>
            <field name="code_type">tax</field>
            <field name="rate">0</field>
            <field name="sequence">1</field>
            <field name="description">Exempted supplies - 0% VAT. Includes basic foodstuffs, educational materials, medical supplies, and other items specified in the VAT Act.</field>
        </record>

        <record id="tax_code_b" model="ghana.evat.tax.code">
            <field name="name">Standard Taxable Supplies</field>
            <field name="code">TAX_B</field>
            <field name="code_type">tax</field>
            <field name="rate">15</field>
            <field name="sequence">2</field>
            <field name="description">Standard VAT rate of 15% applicable to most goods and services. NHIL (2.5%) and GETFund (2.5%) levies also apply, bringing total to 20%.</field>
        </record>

        <record id="tax_code_c" model="ghana.evat.tax.code">
            <field name="name">Export (Zero-Rated)</field>
            <field name="code">TAX_C</field>
            <field name="code_type">tax</field>
            <field name="rate">0</field>
            <field name="sequence">3</field>
            <field name="description">Zero-rated exports. Goods and services exported outside Ghana are subject to 0% VAT but allow input tax recovery.</field>
        </record>

        <record id="tax_code_d" model="ghana.evat.tax.code">
            <field name="name">Non-Taxable Supplies</field>
            <field name="code">TAX_D</field>
            <field name="code_type">tax</field>
            <field name="rate">0</field>
            <field name="sequence">4</field>
            <field name="description">Non-taxable supplies outside the scope of VAT. No VAT applies and no input tax can be recovered.</field>
        </record>

        <record id="tax_code_e" model="ghana.evat.tax.code">
            <field name="name">Non-VAT Flat Rate</field>
            <field name="code">TAX_E</field>
            <field name="code_type">tax</field>
            <field name="rate">3</field>
            <field name="sequence">5</field>
            <field name="description">3% flat rate for non-VAT registered retailers. Note: VAT Flat Rate Scheme (VFRS) was abolished under VAT Act 1151.</field>
        </record>

        <!-- LEVY CODES -->
        <record id="levy_code_a" model="ghana.evat.tax.code">
            <field name="name">NHIL (National Health Insurance Levy)</field>
            <field name="code">LEVY_A</field>
            <field name="code_type">levy</field>
            <field name="rate">2.5</field>
            <field name="sequence">10</field>
            <field name="description">National Health Insurance Levy at 2.5%. Under VAT Act 1151, NHIL is now input-deductible (re-coupled to VAT base).</field>
        </record>

        <record id="levy_code_b" model="ghana.evat.tax.code">
            <field name="name">GETFund (Ghana Education Trust Fund Levy)</field>
            <field name="code">LEVY_B</field>
            <field name="code_type">levy</field>
            <field name="rate">2.5</field>
            <field name="sequence">11</field>
            <field name="description">Ghana Education Trust Fund Levy at 2.5%. Under VAT Act 1151, GETFund is now input-deductible (re-coupled to VAT base).</field>
        </record>

        <record id="levy_code_c" model="ghana.evat.tax.code">
            <field name="name">COVID-19 Health Recovery Levy (ABOLISHED)</field>
            <field name="code">LEVY_C</field>
            <field name="code_type">levy</field>
            <field name="rate">0</field>
            <field name="sequence">12</field>
            <field name="active" eval="False"/>
            <field name="description">COVID-19 Health Recovery Levy was 1% but has been ABOLISHED under VAT Act 1151 effective January 2026.</field>
        </record>

        <record id="levy_code_d" model="ghana.evat.tax.code">
            <field name="name">Tourism Levy / CST</field>
            <field name="code">LEVY_D</field>
            <field name="code_type">levy</field>
            <field name="rate">1</field>
            <field name="sequence">13</field>
            <field name="description">Tourism Levy (1%) or Communication Service Tax (5%) depending on the type of supply. Tourism levy applies to tourism services; CST applies to electronic communication services.</field>
        </record>
    </data>
</odoo>
