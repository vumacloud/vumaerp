<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_evat" model="ir.ui.view">
        <field name="name">account.move.form.evat</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add E-VAT submit button -->
            <xpath expr="//header" position="inside">
                <button name="action_submit_evat" type="object"
                        string="Submit to E-VAT"
                        class="btn-primary"
                        invisible="move_type not in ('out_invoice', 'out_refund') or state != 'posted' or evat_submitted"/>
                <field name="evat_submitted" invisible="1"/>
            </xpath>

            <!-- Add E-VAT tab -->
            <xpath expr="//notebook" position="inside">
                <page string="E-VAT" name="evat_tab"
                      invisible="move_type not in ('out_invoice', 'out_refund')">
                    <group>
                        <group string="Submission Status">
                            <field name="evat_submitted"/>
                            <field name="evat_submit_date"/>
                        </group>
                        <group string="E-VAT Receipt">
                            <field name="evat_sdc_id"/>
                            <field name="evat_receipt_number"/>
                            <field name="evat_sdc_time"/>
                            <field name="evat_invoice_number"/>
                        </group>
                    </group>
                    <group string="Technical Details"
                           invisible="not evat_submitted">
                        <field name="evat_internal_data"/>
                        <field name="evat_signature"/>
                        <field name="evat_qrcode" widget="url"/>
                        <field name="evat_response" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Tree view to show E-VAT status -->
    <record id="view_move_tree_evat" model="ir.ui.view">
        <field name="name">account.move.tree.evat</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="evat_submitted" string="E-VAT" optional="show"/>
                <field name="evat_sdc_id" string="SDC ID" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
