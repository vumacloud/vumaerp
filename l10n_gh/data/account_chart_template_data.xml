<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
        Ghana Chart of Accounts Template
        Based on IFRS as adopted by ICAG (Institute of Chartered Accountants, Ghana)
        Reference: Companies Act, 2019 (Act 992)

        Note: Account references are set in account_chart_template_configure_data.xml
        which loads AFTER accounts are created.
        -->
        <record id="gh_chart_template" model="account.chart.template">
            <field name="name">Ghana - IFRS Chart of Accounts</field>
            <field name="code">gh</field>
            <field name="currency_id" ref="base.GHS"/>
            <field name="country_id" ref="base.gh"/>
            <field name="bank_account_code_prefix">1200</field>
            <field name="cash_account_code_prefix">1100</field>
            <field name="transfer_account_code_prefix">1190</field>
        </record>
    </data>
</odoo>
