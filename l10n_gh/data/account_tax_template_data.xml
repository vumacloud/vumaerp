            <field name="description">VAT</field>
            <field name="amount">15</field>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">sale</field>
            <field name="tax_group_id" ref="tax_group_vat_15"/>
            <field name="chart_template_id" ref="gh_chart_template"/>
            <field name="invoice_repartition_line_ids" eval="[
                (0, 0, {'repartition_type': 'base', 'tag_ids': [(6, 0, [ref('account_tag_gh_base_sales')])],'factor_percent': 100}),
                (0, 0, {'repartition_type': 'tax', 'account_id': ref('account_gh_2210'), 'tag_ids': [(6, 0, [ref('account_tag_gh_vat_sales')])], 'factor_percent': 100}),
