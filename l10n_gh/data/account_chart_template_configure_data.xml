<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
        Configuration for Ghana Chart of Accounts
        This file loads LAST to set account references after accounts are created.
        -->

        <!-- Set default accounts on chart template -->
        <record id="gh_chart_template" model="account.chart.template">
            <!-- Currency exchange accounts -->
            <field name="income_currency_exchange_account_id" ref="account_gh_7600"/>
            <field name="expense_currency_exchange_account_id" ref="account_gh_6700"/>

            <!-- Default property accounts -->
            <field name="property_account_receivable_id" ref="account_gh_1300"/>
            <field name="property_account_payable_id" ref="account_gh_2100"/>
            <field name="property_account_expense_categ_id" ref="account_gh_5100"/>
            <field name="property_account_income_categ_id" ref="account_gh_4100"/>

            <!-- Stock accounts -->
            <field name="property_stock_account_input_categ_id" ref="account_gh_1410"/>
            <field name="property_stock_account_output_categ_id" ref="account_gh_1420"/>
            <field name="property_stock_valuation_account_id" ref="account_gh_1400"/>
        </record>

    </data>
</odoo>
