<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
        Ghana Tax Groups
        VAT Act 1151 (effective January 2026)
        -->

        <record id="tax_group_vat_15" model="account.tax.group">
            <field name="name">VAT 15%</field>
            <field name="sequence">1</field>
            <field name="country_id" ref="base.gh"/>
        </record>

        <record id="tax_group_nhil" model="account.tax.group">
            <field name="name">NHIL 2.5%</field>
            <field name="sequence">2</field>
            <field name="country_id" ref="base.gh"/>
        </record>

        <record id="tax_group_getfund" model="account.tax.group">
            <field name="name">GETFund 2.5%</field>
            <field name="sequence">3</field>
            <field name="country_id" ref="base.gh"/>
        </record>

        <record id="tax_group_tourism" model="account.tax.group">
            <field name="name">Tourism Levy 1%</field>
            <field name="sequence">4</field>
            <field name="country_id" ref="base.gh"/>
        </record>

        <record id="tax_group_cst" model="account.tax.group">
            <field name="name">CST 5%</field>
            <field name="sequence">5</field>
            <field name="country_id" ref="base.gh"/>
        </record>

        <record id="tax_group_zero" model="account.tax.group">
            <field name="name">Zero Rated</field>
            <field name="sequence">10</field>
            <field name="country_id" ref="base.gh"/>
        </record>

        <record id="tax_group_exempt" model="account.tax.group">
            <field name="name">Exempt</field>
            <field name="sequence">11</field>
            <field name="country_id" ref="base.gh"/>
        </record>

        <record id="tax_group_withholding" model="account.tax.group">
            <field name="name">Withholding Tax</field>
            <field name="sequence">20</field>
            <field name="country_id" ref="base.gh"/>
        </record>

    </data>
</odoo>
