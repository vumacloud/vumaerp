<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
        Ghana Fiscal Positions
        Used to automatically map taxes based on customer/vendor location and type
        -->

        <!-- Domestic - Standard VAT 20% -->
        <record id="fiscal_position_domestic" model="account.fiscal.position.template">
            <field name="name">Domestic (Ghana)</field>
            <field name="chart_template_id" ref="gh_chart_template"/>
            <field name="note">Standard domestic transactions with full VAT (15%), NHIL (2.5%), and GETFund (2.5%) - Total 20%</field>
            <field name="sequence">1</field>
        </record>

        <!-- Export - Zero Rated -->
        <record id="fiscal_position_export" model="account.fiscal.position.template">
            <field name="name">Export (Zero-Rated)</field>
            <field name="chart_template_id" ref="gh_chart_template"/>
            <field name="note">Export transactions - Zero-rated VAT with input tax recovery</field>
            <field name="sequence">2</field>
        </record>

        <!-- Tax mappings for Export position -->
        <record id="fiscal_position_export_tax_1" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_export"/>
            <field name="tax_src_id" ref="tax_sale_vat_combined"/>
            <field name="tax_dest_id" ref="tax_sale_zero"/>
        </record>

        <record id="fiscal_position_export_tax_2" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_export"/>
            <field name="tax_src_id" ref="tax_sale_vat_15"/>
            <field name="tax_dest_id" ref="tax_sale_zero"/>
        </record>

        <record id="fiscal_position_export_tax_3" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_export"/>
            <field name="tax_src_id" ref="tax_sale_nhil"/>
            <field name="tax_dest_id" ref="tax_sale_zero"/>
        </record>

        <record id="fiscal_position_export_tax_4" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_export"/>
            <field name="tax_src_id" ref="tax_sale_getfund"/>
            <field name="tax_dest_id" ref="tax_sale_zero"/>
        </record>

        <!-- Exempt Supplies -->
        <record id="fiscal_position_exempt" model="account.fiscal.position.template">
            <field name="name">Exempt Supplies</field>
            <field name="chart_template_id" ref="gh_chart_template"/>
            <field name="note">Exempt supplies - No VAT charged, no input tax recovery. Includes basic necessities, education, health services.</field>
            <field name="sequence">3</field>
        </record>

        <!-- Tax mappings for Exempt position -->
        <record id="fiscal_position_exempt_tax_1" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_exempt"/>
            <field name="tax_src_id" ref="tax_sale_vat_combined"/>
            <field name="tax_dest_id" ref="tax_sale_exempt"/>
        </record>

        <record id="fiscal_position_exempt_tax_2" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_exempt"/>
            <field name="tax_src_id" ref="tax_sale_vat_15"/>
            <field name="tax_dest_id" ref="tax_sale_exempt"/>
        </record>

        <record id="fiscal_position_exempt_tax_3" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_exempt"/>
            <field name="tax_src_id" ref="tax_sale_nhil"/>
            <field name="tax_dest_id" ref="tax_sale_exempt"/>
        </record>

        <record id="fiscal_position_exempt_tax_4" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_exempt"/>
            <field name="tax_src_id" ref="tax_sale_getfund"/>
            <field name="tax_dest_id" ref="tax_sale_exempt"/>
        </record>

        <record id="fiscal_position_exempt_tax_5" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_exempt"/>
            <field name="tax_src_id" ref="tax_purchase_vat_combined"/>
            <field name="tax_dest_id" ref="tax_purchase_exempt"/>
        </record>

        <record id="fiscal_position_exempt_tax_6" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_exempt"/>
            <field name="tax_src_id" ref="tax_purchase_vat_15"/>
            <field name="tax_dest_id" ref="tax_purchase_exempt"/>
        </record>

        <!-- Tourism Services -->
        <record id="fiscal_position_tourism" model="account.fiscal.position.template">
            <field name="name">Tourism Services</field>
            <field name="chart_template_id" ref="gh_chart_template"/>
            <field name="note">Tourism services subject to Tourism Levy (1%) in addition to standard VAT</field>
            <field name="sequence">4</field>
        </record>

        <!-- Communication Services (CST) -->
        <record id="fiscal_position_communication" model="account.fiscal.position.template">
            <field name="name">Communication Services</field>
            <field name="chart_template_id" ref="gh_chart_template"/>
            <field name="note">Electronic communication services subject to Communication Service Tax (CST) of 5%</field>
            <field name="sequence">5</field>
        </record>

    </data>
</odoo>
