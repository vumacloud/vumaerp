<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- EBM Manager Group -->
        <record id="group_ebm_manager" model="res.groups">
            <field name="name">EBM Manager</field>
            <field name="category_id" ref="base.module_category_accounting_accounting"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_manager'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="ebm_config_company_rule" model="ir.rule">
            <field name="name">EBM Config: Multi-Company</field>
            <field name="model_id" ref="model_l10n_rw_ebm_config"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
