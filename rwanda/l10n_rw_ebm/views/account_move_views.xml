<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_ebm" model="ir.ui.view">
        <field name="name">account.move.form.ebm</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add EBM fields to invoice form -->
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="ebm_invoice_type"
                    invisible="move_type not in ('out_invoice', 'out_refund')"/>
            </xpath>

            <!-- Add EBM status in header -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" icon="fa-file-text-o"
                    name="action_resubmit_ebm"
                    type="object"
                    invisible="not ebm_submitted or move_type not in ('out_invoice', 'out_refund')"
                    confirm="Resubmit this invoice to EBM?">
                    <field name="ebm_submitted" widget="boolean"/>
                    <span>EBM Submitted</span>
                </button>
            </xpath>

            <!-- Add EBM info tab -->
            <xpath expr="//page[@name='other_info']" position="after">
                <page string="EBM Information" name="ebm_info"
                    invisible="move_type not in ('out_invoice', 'out_refund')">
                    <group>
                        <group string="EBM Status">
                            <field name="ebm_submitted"/>
                            <field name="ebm_submission_date"/>
                            <field name="ebm_receipt_number"/>
                        </group>
                        <group string="EBM Details">
                            <field name="ebm_internal_data"/>
                            <field name="ebm_receipt_signature"/>
                            <field name="ebm_qr_code"/>
                        </group>
                    </group>
                    <group string="EBM Response" invisible="not ebm_response">
                        <field name="ebm_response" nolabel="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Add EBM columns to invoice tree view -->
    <record id="view_move_tree_ebm" model="ir.ui.view">
        <field name="name">account.move.tree.ebm</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="ebm_submitted" string="EBM" optional="show"/>
                <field name="ebm_receipt_number" string="EBM Receipt" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
