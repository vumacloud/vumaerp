<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- EFRIS Device Form View -->
    <record id="view_efris_device_form" model="ir.ui.view">
        <field name="name">efris.device.form</field>
        <field name="model">efris.device</field>
        <field name="arch" type="xml">
            <form string="EFRIS Device">
                <header>
                    <button name="action_activate"
                            string="Activate"
                            type="object"
                            class="btn-primary"
                            invisible="status == 'active'"/>
                    <button name="action_deactivate"
                            string="Deactivate"
                            type="object"
                            class="btn-secondary"
                            invisible="status != 'active'"/>
                    <field name="status" widget="statusbar"
                           statusbar_visible="inactive,active"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="device_no"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Device Information">
                            <field name="device_id"/>
                            <field name="company_id"/>
                            <field name="config_id"/>
                        </group>
                        <group string="Location">
                            <field name="branch_name"/>
                            <field name="branch_code"/>
                            <field name="address"/>
                        </group>
                    </group>
                    <group>
                        <group string="Counters">
                            <field name="last_invoice_no"/>
                            <field name="last_receipt_no"/>
                        </group>
                        <group string="Activity">
                            <field name="registration_date"/>
                            <field name="last_activity"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- EFRIS Device Tree View -->
    <record id="view_efris_device_tree" model="ir.ui.view">
        <field name="name">efris.device.tree</field>
        <field name="model">efris.device</field>
        <field name="arch" type="xml">
            <tree string="EFRIS Devices">
                <field name="device_no"/>
                <field name="device_id"/>
                <field name="branch_name"/>
                <field name="status" widget="badge"
                       decoration-danger="status == 'inactive'"
                       decoration-warning="status == 'suspended'"
                       decoration-success="status == 'active'"/>
                <field name="last_invoice_no"/>
                <field name="last_activity"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- EFRIS Device Action -->
    <record id="action_efris_device" model="ir.actions.act_window">
        <field name="name">EFRIS Devices</field>
        <field name="res_model">efris.device</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register EFRIS devices
            </p>
            <p>
                Manage your EFRIS devices registered with Uganda Revenue Authority.
                Each device has unique counters for invoices and receipts.
            </p>
        </field>
    </record>

    <!-- Add to EFRIS menu -->
    <menuitem id="menu_efris_devices"
        name="Devices"
        parent="menu_efris_root"
        action="action_efris_device"
        sequence="105"/>
</odoo>
