<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- EFRIS Document Types -->
        <!-- Based on URA EFRIS Invoice Types -->

        <record id="efris_doc_type_101" model="efris.document.type">
            <field name="code">101</field>
            <field name="name">Sales Invoice</field>
            <field name="description">Standard sales invoice for goods and services</field>
            <field name="move_type">out_invoice</field>
        </record>

        <record id="efris_doc_type_102" model="efris.document.type">
            <field name="code">102</field>
            <field name="name">Credit Note</field>
            <field name="description">Credit note for returns or adjustments</field>
            <field name="move_type">out_refund</field>
        </record>

        <record id="efris_doc_type_103" model="efris.document.type">
            <field name="code">103</field>
            <field name="name">Debit Note</field>
            <field name="description">Debit note for additional charges</field>
        </record>

        <record id="efris_doc_type_104" model="efris.document.type">
            <field name="code">104</field>
            <field name="name">Export Invoice</field>
            <field name="description">Invoice for export transactions (zero-rated)</field>
        </record>

        <record id="efris_doc_type_105" model="efris.document.type">
            <field name="code">105</field>
            <field name="name">Proforma Invoice</field>
            <field name="description">Proforma invoice (quotation)</field>
        </record>

        <record id="efris_doc_type_106" model="efris.document.type">
            <field name="code">106</field>
            <field name="name">Deemed Invoice</field>
            <field name="description">Deemed supply invoice</field>
        </record>

        <record id="efris_doc_type_107" model="efris.document.type">
            <field name="code">107</field>
            <field name="name">Adjustment Invoice</field>
            <field name="description">Invoice adjustment</field>
        </record>
    </data>
</odoo>
