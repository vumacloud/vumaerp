# ===========================================
# VumaERP Environment Configuration
# ===========================================
# Copy to .env and fill in your values
# NEVER commit .env to version control

# PostgreSQL
POSTGRES_USER=odoo
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Odoo
ODOO_ADMIN_PASSWORD=CHANGE_ME_MASTER_PASSWORD

# Domain
DOMAIN=vuma.cloud

# Let's Encrypt
LETSENCRYPT_EMAIL=admin@vuma.cloud

# DigitalOcean Spaces (for backups)
DO_SPACES_KEY=your_spaces_key
DO_SPACES_SECRET=your_spaces_secret
DO_SPACES_BUCKET=vumaerp-backups
DO_SPACES_REGION=fra1

# Optional: Email (or configure in Odoo UI)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@vuma.cloud
# SMTP_PASSWORD=email_password
