<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_payslip_view_form_kenya" model="ir.ui.view">
        <field name="name">hr.payslip.form.kenya</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="om_hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_info']" position="after">
                <page string="Kenya Statutory" name="kenya_statutory">
                    <group>
                        <group string="Deductions">
                            <field name="ke_paye_amount"/>
                            <field name="ke_shif_amount"/>
                            <field name="ke_nssf_amount"/>
                            <field name="ke_housing_levy_amount"/>
                        </group>
                        <group string="Reliefs">
                            <field name="ke_personal_relief"/>
                            <field name="ke_insurance_relief"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
