<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="etims_config_view_form" model="ir.ui.view">
        <field name="name">etims.config.form</field>
        <field name="model">etims.config</field>
        <field name="arch" type="xml">
            <form string="eTIMS Configuration">
                <header>
                    <button name="action_test_connection" type="object"
                            string="Test Connection" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group string="Company">
                            <field name="name"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active"/>
                        </group>
                        <group string="Environment">
                            <field name="environment" widget="radio"/>
                        </group>
                    </group>
                    <group>
                        <group string="KRA Credentials">
                            <field name="tin" placeholder="P000000000X"/>
                            <field name="bhf_id"/>
                            <field name="dvc_srl_no"/>
                            <field name="cmn_key"/>
                        </group>
                        <group string="Status">
                            <field name="last_request_date"/>
                        </group>
                    </group>
                    <group string="Last API Response" attrs="{'invisible': [('last_response', '=', False)]}">
                        <field name="last_response" nolabel="1" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="etims_config_view_tree" model="ir.ui.view">
        <field name="name">etims.config.tree</field>
        <field name="model">etims.config</field>
        <field name="arch" type="xml">
            <tree string="eTIMS Configurations">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="environment"/>
                <field name="tin"/>
                <field name="last_request_date"/>
            </tree>
        </field>
    </record>

    <record id="etims_config_action" model="ir.actions.act_window">
        <field name="name">eTIMS Configuration</field>
        <field name="res_model">etims.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure eTIMS integration
            </p>
            <p>
                Enter your KRA PIN, device serial number, and other credentials
                to start submitting invoices to eTIMS.
            </p>
        </field>
    </record>
</odoo>
