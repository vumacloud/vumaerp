<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="etims_config_view_form" model="ir.ui.view">
        <field name="name">etims.config.form</field>
        <field name="model">etims.config</field>
        <field name="arch" type="xml">
            <form string="eTIMS Configuration">
                <header>
                    <button name="action_initialize_device" type="object"
                            string="Initialize Device" class="btn-primary"
                            invisible="device_state == 'initialized'"
                            confirm="This will register your device with KRA eTIMS and obtain the communication key. Continue?"/>
                    <button name="action_test_connection" type="object"
                            string="Test Connection" class="btn-secondary"
                            invisible="device_state != 'initialized'"/>
                    <button name="action_reset_device" type="object"
                            string="Reset Device" class="btn-link"
                            invisible="device_state == 'draft'"
                            confirm="This will reset the device state. You will need to re-initialize. Continue?"/>
                    <field name="device_state" widget="statusbar"
                           statusbar_visible="draft,initialized"/>
                </header>
                <sheet>
                    <!-- Setup Guide Banner - shown before initialization -->
                    <div class="alert alert-info" role="alert" invisible="device_state == 'initialized'">
                        <strong>OSCU Setup Guide:</strong>
                        <ol style="margin-bottom: 0; padding-left: 20px;">
                            <li>Enter your KRA PIN (TIN) and Branch ID below</li>
                            <li>Device Serial Number will be auto-generated</li>
                            <li>Click <strong>"Initialize Device"</strong> to register with KRA and obtain communication key</li>
                            <li>Once initialized, you can submit invoices to eTIMS</li>
                        </ol>
                    </div>
                    <!-- Success Banner - shown after initialization -->
                    <div class="alert alert-success" role="alert" invisible="device_state != 'initialized'">
                        <strong>Device Initialized</strong> - Your OSCU device is registered with KRA eTIMS and ready to submit invoices.
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group string="TIS Identification">
                            <field name="tis_name" readonly="1"/>
                            <field name="tis_version" readonly="1"/>
                        </group>
                        <group string="Environment">
                            <field name="environment" widget="radio"/>
                            <field name="api_url_pattern" widget="radio"
                                   help="If initialization fails, try the other pattern. KRA documentation is inconsistent about this."/>
                        </group>
                    </group>
                    <group>
                        <group string="Company">
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <group string="KRA Credentials">
                            <field name="tin" placeholder="P000000000X"/>
                            <field name="bhf_id"/>
                            <field name="dvc_srl_no" placeholder="Auto-generated from TIN"/>
                        </group>
                        <group string="Communication Key">
                            <field name="cmn_key"
                                   readonly="device_state == 'initialized'"
                                   help="Automatically obtained from KRA during device initialization. Can be entered manually if needed."/>
                            <field name="sdc_id" readonly="1"
                                   help="SDC/CU ID returned from KRA (e.g., KRACU04XXXXXXXX)"/>
                            <field name="initialization_date" readonly="1"/>
                        </group>
                    </group>
                    <group invisible="not initialization_error">
                        <group string="Initialization Error" colspan="2">
                            <div class="alert alert-danger" role="alert" style="margin-bottom: 0;">
                                <field name="initialization_error" nolabel="1" readonly="1"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <group string="Status">
                            <field name="last_request_date"/>
                        </group>
                    </group>
                    <group string="Last API Response" invisible="not last_response">
                        <field name="last_response" nolabel="1" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="etims_config_view_tree" model="ir.ui.view">
        <field name="name">etims.config.tree</field>
        <field name="model">etims.config</field>
        <field name="arch" type="xml">
            <tree string="eTIMS Configurations">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="environment"/>
                <field name="tin"/>
                <field name="device_state" widget="badge"
                       decoration-success="device_state == 'initialized'"
                       decoration-warning="device_state == 'initializing'"
                       decoration-danger="device_state == 'error'"
                       decoration-muted="device_state == 'draft'"/>
                <field name="last_request_date"/>
            </tree>
        </field>
    </record>

    <record id="etims_config_action" model="ir.actions.act_window">
        <field name="name">eTIMS Configuration</field>
        <field name="res_model">etims.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure eTIMS OSCU Integration
            </p>
            <p>
                To set up your KRA eTIMS OSCU integration:
            </p>
            <ol>
                <li>Create a new configuration and enter your KRA PIN (TIN)</li>
                <li>Click "Initialize Device" to register with KRA</li>
                <li>The communication key will be obtained automatically</li>
                <li>Start submitting invoices to eTIMS</li>
            </ol>
        </field>
    </record>
</odoo>
