<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Z Report Sequence -->
    <record id="seq_etims_daily_report_z" model="ir.sequence">
        <field name="name">eTIMS Z Report</field>
        <field name="code">etims.daily.report.z</field>
        <field name="prefix">Z-%(year)s%(month)s%(day)s-</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- X Report Sequence -->
    <record id="seq_etims_daily_report_x" model="ir.sequence">
        <field name="name">eTIMS X Report</field>
        <field name="code">etims.daily.report.x</field>
        <field name="prefix">X-%(year)s%(month)s%(day)s-</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Daily Z Report Cron Job -->
    <record id="ir_cron_etims_z_report" model="ir.cron">
        <field name="name">eTIMS: Generate Daily Z Report</field>
        <field name="model_id" ref="model_etims_daily_report"/>
        <field name="state">code</field>
        <field name="code">model.action_generate_z_report()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="active" eval="True"/>
        <field name="nextcall" eval="(datetime.datetime.now() + datetime.timedelta(days=1)).replace(hour=23, minute=55, second=0).strftime('%Y-%m-%d %H:%M:%S')"/>
    </record>

</odoo>
