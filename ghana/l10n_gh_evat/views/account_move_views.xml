<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Invoice Form View Extension for E-VAT -->
    <record id="view_account_move_form_evat" model="ir.ui.view">
        <field name="name">account.move.form.evat</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_submit_to_evat" string="Submit to E-VAT"
                        type="object" class="btn-primary"
                        invisible="evat_submitted or move_type not in ['out_invoice', 'out_refund'] or state != 'posted'"/>
                <button name="action_cancel_evat" string="Cancel E-VAT"
                        type="object" class="btn-secondary"
                        invisible="not evat_submitted or evat_status in ['cancelled']"
                        confirm="Are you sure you want to cancel the E-VAT submission?"/>
            </xpath>

            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="evat_status" widget="badge"
                       decoration-info="evat_status == 'pending'"
                       decoration-success="evat_status in ['submitted', 'accepted']"
                       decoration-danger="evat_status == 'rejected'"
                       decoration-warning="evat_status == 'cancelled'"
                       invisible="evat_status == 'draft'"/>
            </xpath>

            <xpath expr="//page[@name='other_info']" position="after">
                <page string="E-VAT" name="evat_info"
                      invisible="move_type not in ['out_invoice', 'out_refund']">
                    <group>
                        <group string="E-VAT Status">
                            <field name="evat_submitted" readonly="1"/>
                            <field name="evat_status" readonly="1"/>
                            <field name="evat_submission_date" readonly="1"/>
                        </group>
                        <group string="E-VAT Reference">
                            <field name="evat_reference" readonly="1"/>
                            <field name="evat_qr_code" readonly="1"/>
                            <field name="partner_tin"/>
                        </group>
                    </group>
                    <group string="Error Message" invisible="not evat_error_message">
                        <field name="evat_error_message" readonly="1" nolabel="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Invoice Tree View Extension -->
    <record id="view_account_move_tree_evat" model="ir.ui.view">
        <field name="name">account.move.tree.evat</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="evat_status" optional="show" widget="badge"
                       decoration-info="evat_status == 'pending'"
                       decoration-success="evat_status in ['submitted', 'accepted']"
                       decoration-danger="evat_status == 'rejected'"
                       decoration-warning="evat_status == 'cancelled'"/>
            </xpath>
        </field>
    </record>
</odoo>
